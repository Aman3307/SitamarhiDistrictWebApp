@model DQSP.Models.DistrictQueryModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sitamarhi - Birth Place of Goddess Sita</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        .jumbotron {
            background-color: #b6ff00;
            color: #000000;
            padding: 50px;
            text-align: center;
        }

        .navbar {
            background-color: rgba(0, 0, 0, 0.8);
        }

        .navbar-dark .navbar-toggler-icon {
            background-color: #fff;
        }

        .navbar-dark .navbar-nav .nav-link {
            color: #fff;
        }

        .section {
            padding: 50px 0;
        }

            .section h2 {
                margin-bottom: 30px;
            }

        .feature {
            text-align: center;
        }

            .feature img {
                max-width: 100%;
                height: auto;
                margin-bottom: 15px;
            }

        .bg-grey {
            background-color: #f6f6f6;
        }

        .footer {
            background-color: #333;
            color: #fff;
            padding: 20px 0;
            text-align: center;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand" href="#">
                <img src="https://source.unsplash.com/random?Sita" alt="Sita" width="50" height="50" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#myNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="myNavbar">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link" href="#History">History</a></li>
                    <li class="nav-item"><a class="nav-link" href="#TouristSpots">Tourist Spots</a></li>
                    <li class="nav-item"><a class="nav-link" href="#HelpSupport">Help & Support</a></li>
                    <li class="nav-item"><a class="nav-link" href="#Donate">Donate</a></li>
                    <li class="nav-item"><a class="nav-link" href="#Contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="jumbotron">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <a class="navbar-brand" href="#">
                        <img src="https://source.unsplash.com/random?Sita" alt="Sita" class="img-fluid" />
                    </a>
                </div>
                <div class="col-md-8">
                    <h1 class="display-4">Sitamarhi</h1>
                    <p class="lead">Birth Place of Goddess Sita</p>
                    <form class="form-inline">
                        <div class="input-group">
                            <input type="text" class="form-control" size="50" placeholder="Raise your issue to Honourable Member of Parliament">
                            <div class="input-group-append">
                                <button type="button" class="btn btn-primary">Submit</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="container section" id="History">
        <div class="row">
            <div class="col-md-6">
                <h2>About Sitamarhi</h2>
                <p>Sitamarhi is a district of North Bihar. It is considered the birthplace of Sita, the main character of the epic Ramayana. A temple dedicated to Sita lies near Sitamarhi town. A Rock cut sanctuary of Mauryan period is found near Sitamarhi. In 1875, a Sitamarhi subdistrict was created within the Muzaffarpur district.</p>
                <button class="btn btn-primary btn-lg">Jai Maa Janki</button>
            </div>
            <div class="col-md-6">
                <img src="https://source.unsplash.com/random?Ramayan" alt="LordRam" class="img-fluid">
            </div>
        </div>
    </div>
    <div class="bg-grey section" id="TouristSpots">
        <div class="container">
            <h2 class="text-center">Tourist Spots</h2>
            <div class="row">
                <div class="col-md-4 feature">
                    <img src="https://source.unsplash.com/random?Sita" alt="Janki Mandir" class="img-fluid">
                    <h4>Janki Mandir</h4>
                    <p>Visit the famous Janki Mandir in Sitamarhi.</p>
                </div>
                <div class="col-md-4 feature">
                    <img src="https://source.unsplash.com/random?Ramayan" alt="Sita Janmsthali, Punaura" class="img-fluid">
                    <h4>Sita Janmsthali, Punaura</h4>
                    <p>Explore the historic Sita Janmsthali in Punaura.</p>
                </div>
                <div class="col-md-4 feature">
                    <img src="https://source.unsplash.com/random?Shiva_Temple" alt="Haleshwar Sthan" class="img-fluid">
                    <h4>Haleshwar Sthan</h4>
                    <p>Discover the spiritual Haleshwar Sthan.</p>
                </div>
            </div>
        </div>
    </div>
    <div class="container section" id="HelpSupport">
        <h2 class="text-center">Help & Support</h2>
        <div class="row">
            <div class="col-md-4 feature">
                <img src="https://source.unsplash.com/random?Hospital" alt="Hospital" class="img-fluid">
                <h4>Hospital</h4>
                <p>Find hospitals in Sitamarhi for medical assistance.</p>
            </div>
            <div class="col-md-4 feature">
                <img src="https://source.unsplash.com/random?Hotel" alt="Hotel" class="img-fluid">
                <h4>Hotel</h4>
                <p>Explore comfortable hotels to stay in Sitamarhi.</p>
            </div>
            <div class="col-md-4 feature">
                <img src="https://source.unsplash.com/random?School" alt="School" class="img-fluid">
                <h4>School</h4>
                <p>Discover schools and educational institutions in Sitamarhi.</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 feature">
                <img src="https://source.unsplash.com/random?Police" alt="Police" class="img-fluid">
                <h4>Police</h4>
                <p>Contact the police for safety and security concerns.</p>
            </div>
            <div class="col-md-4 feature">
                <img src="https://source.unsplash.com/random?RailwayStation" alt="Railway Station" class="img-fluid">
                <h4>Railway Station</h4>
                <p>Explore railway stations for travel options.</p>
            </div>
            <div class="col-md-4 feature">
                <img src="https://source.unsplash.com/random?Sitamarhi" alt="Tourist Places" class="img-fluid">
                <h4>Tourist places</h4>
                <p>Visit popular tourist places in Sitamarhi.</p>
            </div>
        </div>
    </div>
    <div class="container-fluid text-center bg-grey" id="Donate">
        <h2 class="text-white">Donate for Us</h2>
        <h4 class="text-white">Although we are the most underdeveloped District of the most underdeveloped state, kindly donate to support us.</h4>
        <div class="row">
            <div class="col-sm-12 col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Just Help Us</h3>
                        <p class="card-text">Provide a pen for 1 poor student</p>
                        <h4 class="card-price">Rs. 51</h4>
                        <button class="btn btn-primary btn-lg">Donate now</button>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Help Us Something More</h3>
                        <p class="card-text">Provide food for 1 poor human</p>
                        <h4 class="card-price">Rs. 101</h4>
                        <button class="btn btn-primary btn-lg">Donate now</button>
                    </div>
                </div>
            </div>
            <div class="col-sm-12 col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h3 class="card-title">Really Valuable Donation</h3>
                        <p class="card-text">Provide food & clothing for 1 poor human for a month</p>
                        <h4 class="card-price">Rs. 251</h4>
                        <button class="btn btn-primary btn-lg">Donate now</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid text-center bg-dark text-white" id="Contact">
        <h2>Contact Us</h2>
        <div class="row">
            <div class="col-sm-12 col-md-6 offset-md-3">
                @using (Html.BeginForm("Submit", "AmanTest", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(model => model.Email, new { @class = "form-control", required = "required" })
                        @Html.ValidationMessageFor(model => model.Email)
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Comment, new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.Comment, new { @class = "form-control", rows = "5" })
                        @Html.ValidationMessageFor(model => model.Comment)
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg">Send</button>
                }
            </div>
        </div>
    </div>
    <div class="container-fluid text-center bg-dark text-white">
        <h2>Map of Sitamarhi</h2>
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <div class="carousel-inner" role="listbox">
                <div class="carousel-item active">
                    <img src="~/Content/Images/2018053192-1024x725.jpg" alt="Image 1" class="img-fluid">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/Images/sitamarhi-district-map.jpg" alt="Image 2" class="img-fluid">
                </div>
                <div class="carousel-item">
                    <img src="~/Content/Images/sitamarhi-tehsil-map.jpg" alt="Image 3" class="img-fluid">
                </div>
            </div>

            <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
    <footer class="footer">
        <div class="container">
            <p>&copy; 2023 Sitamarhi</p>
        </div>
    </footer>
</body>
</html>
